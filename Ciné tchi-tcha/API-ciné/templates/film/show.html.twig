{% extends 'base.html.twig' %}

{% block title %}Film{% endblock %}

{% block body %}
<div class="AdminBox">
    <h1>Film</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ film.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ film.Titre }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ film.Synopsis }}</td>
            </tr>
            <tr>
                <th>Durée</th>
                <td>{{ film.Duree }}</td>
            </tr>
            <tr>
                <th>BandeAnnonce</th>
                <td>{{ film.BandeAnnonce }}</td>
            </tr>
            <tr>
                <th>DateDeSortie</th>
                <td>{{ film.DateDeSortie ? film.DateDeSortie|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Réalisateur</th>
                <td>{{ film.Realisateur }}</td>
            </tr>
            <tr>
                <th>Acteurs</th>
                <td>{{ film.Acteurs }}</td>
            </tr>
            <tr>
                <th>Nationnalité</th>
                <td>{{ film.Nationalite }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('film_index') }}">back to list</a>

    <a href="{{ path('film_edit', {'id': film.id}) }}">edit</a>

    {{ include('film/_delete_form.html.twig') }}
</div>
{% endblock %}
